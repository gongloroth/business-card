<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/baseColor</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="root_view_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="header_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/header_padding</item>
    </style>

    <style name="logo_style">
        <item name="android:layout_height">@dimen/logo_height</item>
        <item name="android:layout_width">@dimen/logo_width</item>
    </style>

    <style name="header_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/header_text_left_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">-0.13</item>
        <item name="android:textColor">@color/baseColor</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:background">@color/baseColor</item>
    </style>

    <style name="main_image_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="slogen_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">@dimen/slogen_padding</item>
        <item name="android:layout_margin">@dimen/slogen_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="slogen_textview_style_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/slogen_padding</item>
        <item name="android:layout_margin">@dimen/slogen_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="slogen_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/slogen_margin</item>
        <item name="android:textSize">@dimen/slogen_text_size</item>
        <item name="android:textColor">@color/baseColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="slogen_text_style_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/slogen_margin</item>
        <item name="android:textSize">@dimen/slogen_text_size</item>
        <item name="android:textColor">@color/baseColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="contact_info_card_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/info_card_margin</item>
        <item name="android:padding">@dimen/info_card_padding</item>
    </style>

    <style name="contact_info_card_style_land">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/info_card_margin</item>
        <item name="android:padding">@dimen/info_card_padding</item>
    </style>

    <style name="contact_line_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/contact_line_padding_right</item>
        <item name="android:paddingLeft">@dimen/contact_line_padding_left</item>
        <item name="android:paddingTop">@dimen/contact_line_padding_top</item>
        <item name="android:paddingBottom">@dimen/contact_line_padding_bottom</item>
    </style>

    <style name="contact_line_style_land">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/contact_line_padding_right_land</item>
        <item name="android:paddingLeft">@dimen/contact_line_padding_left_land</item>
        <item name="android:paddingTop">@dimen/contact_line_padding_top</item>
        <item name="android:paddingBottom">@dimen/contact_line_padding_bottom</item>
    </style>

    <style name="contact_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/contact_icon_margin_right</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="contact_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
